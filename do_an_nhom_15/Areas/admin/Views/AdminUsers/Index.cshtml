@model IEnumerable<do_an_nhom_15.Models.AdminUser>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid pt-4 px-4">
	<div class="row g-4">
		<div class="bg-secondary rounded h-100 p-4">
			<h1 class="mb-4">Admin manager</h1>
			<p class="mb-4">
				<a asp-action="Add" class="btn btn-danger">Add New</a>
			</p>
			<table class="table table-dark">
				<thead>
					<tr>
						<th scope="col">N</th>
						<th scope="col">Account name</th>
						<th scope="col">Full name</th>
						<th scope="col">Create at</th>
						<th scope="col">Active</th>
						<th scope="col" class="col-3"></th>
					</tr>
				</thead>
				<tbody>
					@{
						int N = 0;
						foreach (var item in Model)
						{
							N += 1;
							<tr>
								<td>
									@N
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.Username)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.FullName)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.CreatedAt)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.IsActive)
								</td>

								<td>
									<a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@item.AdminId">Edit</a> |
									<a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.AdminId">Delete</a>
								</td>
							</tr>

						}
					}
				</tbody>
			</table>
		</div>
	</div>
</div>

<!-- Table End -->
