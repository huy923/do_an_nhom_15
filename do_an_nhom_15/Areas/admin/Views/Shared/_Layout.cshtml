<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>DarkPan - Bootstrap 5 Admin Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="~/admin/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Roboto:wght@500;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Libraries Stylesheet -->
    <link href="~/admin/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/admin/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/admin/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/admin/css/style.css" rel="stylesheet">
</head>

<body>
    <div class="container-fluid position-relative d-flex p-0">
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-dark position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->
        <!-- Sidebar Start -->
        <div class="sidebar pe-4 pb-3">
            <nav class="navbar bg-secondary navbar-dark btn">
                <a href="Index" class="navbar-brand mx-4 mb-3">
                    <h3 class="text-primary"><i class="fa fa-user-edit me-2"></i>Dar Pan</h3>
                </a>
                <div class="d-flex align-items-center ms-4 mb-4">
                    <div class="position-relative">
                        <img class="rounded-circle" src="~/admin/img/user.jpg" style="width: 40px; height: 40px;">
                        <div class="bg-success rounded-circle border border-2 border-white position-absolute end-0 bottom-0 p-1"></div>
                    </div>
                    <div class="ms-3">
                        <h6 class="mb-0">Jhon Doe</h6>
                        <span>Admin</span>
                    </div>
                </div>
                @{
                    var currentUrl = ViewContext.HttpContext.Request.Path;
                }
                <div class="navbar-nav w-100 ">
                    <a href="/admin/home/" class="nav-item nav-link @(currentUrl == "/admin/home/" ? "active" : "")">
                        <i class="fa fa-tachometer-alt me-2"></i>Dashboard
                    </a>
                   
                    <a href="/admin/home/Button" class="nav-item nav-link  @(currentUrl == "/admin/home/Button" ? "active" : "")">
                        <i class="fa fa-coffee me-2"></i>Products
                    </a>
                    <a href="/admin/home/Typography" class="nav-item nav-link  @(currentUrl == "/admin/home/Typography" ? "active" : "")">
                        <i class="fa fa-coffee me-2"></i>Products
                    </a>
                    <a href="/admin/home/Element" class="nav-item nav-link  @(currentUrl == "/admin/home/Element" ? "active" : "")">
                        <i class="fa fa-coffee me-2"></i>Products
                    </a>
                    <a href="/admin/Product/" class="nav-item nav-link  @(currentUrl == "/admin/Product/" ? "active" : "")">
                        <i class="fa fa-coffee me-2"></i>Products
                    </a>
                    <a href="/admin/home/Widget" class="nav-item nav-link text-left @(currentUrl == "/admin/home/Widget" ? "active" : "")">
                        <i class="fa fa-th me-2"></i>Widgets
                    </a>
                    <a href="/admin/home/Form" class="nav-item nav-link text-left d-block @(currentUrl == "/admin/home/Form" ? "active" : "")">
                        <i class="fa fa-keyboard me-2"></i>Forms
                    </a>
                    <a href="/admin/home/Table" class="nav-item nav-link text-left d-block @(currentUrl == "/admin/home/Table" ? "active" : "")">
                        <i class="fa fa-table me-2"></i>Tables
                    </a>
                    <a href="/admin/Employee/" class="nav-item nav-link text-left d-block @(currentUrl == "/admin/Employee/" ? "active" : "")">
                        <i class="fa fa-users me-2"></i>Personnel
                    </a>
                    <a href="/admin/home/Chart" class="nav-item nav-link text-left d-block pr-5 @(currentUrl == "/admin/home/Chart" ? "active" : "")">
                        <i class="fa fa-chart-bar me-2 "></i>Charts
                    </a>
                    <div class="nav-item dropdown @(currentUrl.ToString().Contains("/admin/home/") && (currentUrl == "/admin/home/Signin" || currentUrl == "/admin/home/Signup" || currentUrl == "/admin/home/Blank") ? "active" : "")">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="far fa-file-alt me-2"></i>Pages</a>
                        <div class="dropdown-menu bg-transparent border-0">
                            <a href="/admin/login/Signin" class="dropdown-item">Sign In</a>
                            <a href="/admin/home/Blank" class="dropdown-item">Blank Page</a>
                        </div>
                    </div>
                </div>

            </nav>
        </div>
        <!-- Sidebar End -->
        <!-- Content Start -->
        <div class="content">
            <!-- Navbar Start -->
            <nav class="navbar navbar-expand bg-secondary navbar-dark sticky-top px-4 py-0">
                <a href="/admin/home/index" class="navbar-brand d-flex d-lg-none me-4">
                    <h2 class="text-primary mb-0"><i class="fa fa-user-edit"></i></h2>
                </a>
                <a href="#" class="sidebar-toggler flex-shrink-0">
                    <i class="fa fa-bars"></i>
                </a>

                <div class="navbar-nav align-items-center ms-auto">
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                            <img class="rounded-circle me-lg-2" src="~/admin/img/user.jpg" alt="" style="width: 40px; height: 40px;">
                            <span class="d-none d-lg-inline-flex">John Doe</span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end bg-secondary border-0 rounded-0 rounded-bottom m-0">
                            <a href="#" class="dropdown-item">My Profile</a>
                            <a href="#" class="dropdown-item">Settings</a>
                            <a href="/admin/login/logout" class="dropdown-item">Log Out</a>
                        </div>
                    </div>
                </div>
            </nav>
            @RenderBody()
            <div class="container-fluid pt-4 px-4">
                <div class="bg-secondary rounded-top p-4">
                    <div class="row">
                        <div class="col-12 col-sm-6 text-center text-sm-start">
                            &copy; <a href="#">Your Site Name</a>, All Right Reserved.
                        </div>
                        <div class="col-12 col-sm-6 text-center text-sm-end">
                            <!--/*** This template is free as long as you keep the footer author’s credit link/attribution link/backlink. If you'd like to use the template without the footer author’s credit link/attribution link/backlink, you can purchase the Credit Removal License from "https://htmlcodex.com/credit-removal". Thank you for your support. ***/-->
                            Designed By <a href="https://htmlcodex.com">HTML Codex</a>
                            <br>Distributed By: <a href="https://themewagon.com" target="_blank">ThemeWagon</a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Footer End -->
        </div>
        <!-- Content End -->
        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/admin/lib/chart/chart.min.js"></script>
    <script src="~/admin/lib/easing/easing.min.js"></script>
    <script src="~/admin/lib/waypoints/waypoints.min.js"></script>
    <script src="~/admin/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/admin/lib/tempusdominus/js/moment.min.js"></script>
    <script src="~/admin/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="~/admin/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/admin/js/main.js"></script>
    <script src="~/admin/js/main2.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>