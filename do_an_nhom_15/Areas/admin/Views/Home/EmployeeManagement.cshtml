@model do_an_nhom_15.Models.ViewModel

<div class="container mt-5">
    <!-- Add New Employee Button -->
    <div class="text-end mb-3">
        <a href="@Url.Action("Create", "Employee")" class="btn btn-primary">
            <i class="fas fa-user-plus"></i> Add New Employee
        </a>
    </div>

    @if (Model.EmployeeList != null && Model.EmployeeList.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 g-4">
            @foreach (var item in Model.EmployeeList)
            {
                <div class="col">
                    <div class="rounded bg-secondary h-100 ">
                        <div class="card-body p-4">
                            <h5 class="card-title">
                                <i class="fas fa-user text-white"></i> @item.FirstName @item.LastName
                            </h5>
                            <p class="card-text"><strong>Position:</strong> @item.Position</p>
                            <p class="card-text"><strong>Email:</strong> @item.Email</p>
                            <p class="card-text"><strong>Phone:</strong> @item.PhoneNumber</p>
                            <p class="card-text"><strong>Status:</strong> @item.Status</p>
                        </div>
                        <div class="card-footer text-end border-top">
                            <button type="button" class="btn btn-warning me-2" data-bs-toggle="modal" data-bs-target="#editEmployeeModal" onclick="loadEmployeeData('@item.EmployeeId.ToString()','@item.FirstName','@item.LastName','@item.Email','@item.PhoneNumber','@item.Position','@item.Salary','@item.Status')">
                                <i class="fas fa-edit"></i> Edit
                            </button>
                            <a href="@Url.Action("Delete", "Employee", new { id = item.EmployeeId })" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this employee?');">
                                <i class="fas fa-trash-alt"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-center">No employees found.</p>
    }
</div>
<div class="modal fade" id="editEmployeeModal" tabindex="-1" aria-labelledby="editEmployeeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content bg-secondary">
            <div class="modal-header">
                <h5 class="modal-title" id="editEmployeeModalLabel">Edit Employee</h5>
                <button type="button" class="btn-close text-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editEmployeeForm" method="post" action="@Url.Action("Edit", "Employee")">
                    <div class="mb-3">
                        <label class="form-label">First Name</label>
                        <input type="text" class="form-control" id="inputfirstName" name="FirstName"/>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Last Name</label>
                        <input type="text" class="form-control" id="inputlastName" name="LastName" />
                    </div>
                    <div class="mb-3">
                        <label  class="form-label">Email</label>
                        <input type="email" class="form-control" id="inputemail" name="Email" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Phone Number</label>
                        <input type="text" class="form-control" id="inputphoneNumber" name="PhoneNumber" />
                    </div>
                    <div class="mb-3">
                        <label  class="form-label">Position</label>
                        <input type="text" class="form-control" id="inputposition" name="Position" />
                    </div>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </form>
            </div>
        </div>
    </div>
</div>