@model do_an_nhom_15.Models.Product

<div class="container mt-4 mb-2">
    <h2 class="text-center mb-4">Add New Product</h2>
    <form asp-action="Add">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card shadow-sm bg-secondary text-white">
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label">Product Name</label>
                            <input type="text" asp-for="Name" class="form-control text-white" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <textarea type="text" asp-for="Description" class="form-control text-white" ></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Price</label>
                            <input type="email" asp-for="Price" class="form-control text-white" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Discount</label>
                            <input type="number" asp-for="Discount" class="form-control text-white" />
                            <span asp-validation-for="Discount" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Stock</label>
                            <input type="text" asp-for="Stock" class="form-control text-white" />
                            <span asp-validation-for="Stock" class="text-danger"></span>
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary" asp-action="Add">Add Employee</button>
                            <a class="btn btn-outline-primary w-48" asp-action="Index">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
