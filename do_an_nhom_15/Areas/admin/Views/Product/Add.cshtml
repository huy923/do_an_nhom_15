@model do_an_nhom_15.Models.Product;

<div class="container mt-4 mb-2">
    <h2 class="text-center mb-4">Add New Product</h2>
    <form asp-action="Add" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card shadow-sm bg-secondary text-white">
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label">Product Name</label>
                            <input type="text" asp-for="Name" class="form-control text-white" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control text-white" required></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Price</label>
                            <input type="number" asp-for="Price" class="form-control text-white" step="0.01" required />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Discount</label>
                            <input type="number" asp-for="Discount" class="form-control text-white" min="0" max="100"
                                required />
                            <span asp-validation-for="Discount" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Stock</label>
                            <input type="number" asp-for="Stock" class="form-control text-white" min="0" required />
                            <span asp-validation-for="Stock" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Image URL</label>
                            <input type="file" id="formFile" asp-for="ImageUrl" class="form-control text-white bg-dark"
                                accept="image/*"/>
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary" asp-action="Add">Add Product</button>
                            <a class="btn btn-outline-primary w-48" asp-action="Index">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
