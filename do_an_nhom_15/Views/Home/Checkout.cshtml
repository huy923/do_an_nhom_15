                    "Thị xã Hồng Lĩnh",
                    "Huyện Can Lộc",
                    "Huyện Đức Thọ",
                    "Huyện Hương Khê"
                ];
            } else if (province.value === "Hà Nội") {
                optionArray = [
                    "Quận Ba Đình",
                    "Quận Hoàn Kiếm",
                    "Quận Hai Bà Trưng",
                    "Quận Đống Đa"
                ];
            }

            // Add new options to the datalist
            for (var i = 0; i < optionArray.length; i++) {
                var newOption = document.createElement("option");
                newOption.value = optionArray[i];
                districtDatalist.appendChild(newOption);
            }
        }
